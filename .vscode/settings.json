// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.hex": true,
        "**/*.bin": true,
        "**/*.uf2": true,
        "keyboards/keychron/k*/": true,
        "keyboards/keychron/v*/": true,
        "keyboards/keychron/q*_max/": true,
        "keyboards/keychron/q1_pro/": true,
        "keyboards/keychron/q2_pro/": true,
        "keyboards/keychron/q3_pro/iso_*": true,
        "keyboards/keychron/q3_pro/jis_*": true,
        "keyboards/keychron/q3_pro/ansi_encoder/": true,
        "keyboards/keychron/q4_pro/": true,
        "keyboards/keychron/q5_pro/": true,
        "keyboards/keychron/q6_pro/": true,
        "keyboards/keychron/q8_pro/": true,
        "keyboards/keychron/q1*_pro/": true,
    },
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "python.formatting.provider": "yapf",
    "[json]": {
        "editor.formatOnSave": false
    },
    "clangd.arguments": [
        "--header-insertion=never"
    ],
    "editor.inlayHints.enabled": "off",
    "editor.formatOnSave": false
}
